<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutForm"
        android:orientation="vertical">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextId"
            android:visibility="gone"
            android:hint="Id"/>

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Város neve"
            android:textColor="#E91E63"/>

        <EditText
            android:id="@+id/editTextCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ország"
            tools:ignore="TouchTargetSizeCheck"/>

        <EditText
            android:id="@+id/editTextPopulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lakosság száma" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mentés" />

        <Button
            android:id="@+id/buttonModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Módosítás" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vissza" />


</LinearLayout>

    <Button
        android:id="@+id/buttonNewData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Új adat felvitele" />

    <ListView
        android:id="@+id/listViewData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/cities_list_items" />


</LinearLayout>

